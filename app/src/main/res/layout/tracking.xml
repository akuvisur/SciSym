<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".LaunchScreen"
    android:orientation="vertical"
    android:id="@+id/tracking_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/tracking_header">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/tracking_calendarButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@drawable/calendar"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="-20dp"
            android:background="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SYMPTOMS"
            android:id="@+id/tracking_header_label"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tracking_calendarButton"
            android:layout_toStartOf="@+id/tracking_calendarButton"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="..."
            android:id="@+id/tracking_header_date"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@+id/tracking_calendarButton"
            android:paddingBottom="10dp"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tracking_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />

</LinearLayout>
